{
  "name": "spin-wheel",
  "version": "4.2.0",
  "description": "An easy to use, themeable component for randomising choices and prizes.",
  "keywords": [
    "spinner",
    "wheel",
    "random",
    "picker",
    "prize",
    "spinning",
    "roulette",
    "fortune"
  ],
  "type": "module",
  "main": "./src/wheel.js",
  "jsdelivr": "./dist/spin-wheel.js",
  "scripts": {
    "start": "node scripts/build.js -entryPoint=src/wheel.js -servePath=examples/themes/ -format=esm",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPattern=src",
    "lint": "eslint src --fix",
    "build": "npm run lint && npm run test && npm run build-iife",
    "build-iife": "node scripts/build.js -entryPoint=src/wheel.js -format=iife -fileName=spin-wheel.js"
  },
  "jest": {
    "verbose": true,
    "injectGlobals": true,
    "silent": false,
    "testEnvironment": "jsdom",
    "setupFiles": ["jest-canvas-mock"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CrazyTim/spin-wheel.git"
  },
  "author": "CrazyTim",
  "license": "MIT",
  "homepage": "https://github.com/CrazyTim/spin-wheel#readme",
  "engines": {
    "node": ">=14.8.0"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "canvas": "^2.11.2",
    "esbuild": "^0.15.11",
    "eslint": "^8.25.0",
    "jest": "^27.4.3",
    "jest-canvas-mock": "^2.5.1"
  }
}
